{
  "kind": "collectionType",
  "collectionName": "outdoor_areas",
  "info": {
    "singularName": "outdoor-area",
    "pluralName": "outdoor-areas",
    "displayName": "Outdoor Area"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "Name": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "unique": true
    },
    "Description": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "text",
      "default": "No description available"
    },
    "SensoryOverview": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "text",
      "required": false,
      "default": "No Sensory Overview"
    },
    "Tips": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "text",
      "default": "No tips for this area"
    },
    "AreaID": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "uid",
      "targetField": "Name",
      "required": true
    },
    "location": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "json"
    },
    "Icon": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true
    }
  }
}
